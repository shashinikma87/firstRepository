<apex:page StandardController="Rally__c" extensions="UserStoryCallOut" >
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection columns="1">
                <apex:inputText value="{!iteration_name}" html-placeholder="Enter Iteration Name here" label="Iteration Name" />
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Get Details" action="{!getUserStory}"/>
                <apex:commandButton value="Send Mail" action="{!sendMail}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>    
        <apex:pageBlock >
            <apex:pageBlockSection title="Planned Tasks" columns="1">
                <apex:pageBlockTable value="{!rally_list}" var="rally_obj" width="90%">
                    <apex:column headerValue="Formatted ID" value="{!rally_obj.FormattedID__c}"/>
                    <apex:column headerValue="User Story Name" value="{!rally_obj.User_Story_Name__c}"/>
                    <apex:column headerValue="Schedule State" value="{!rally_obj.Schedule_State__c}"/>
                    <apex:column headerValue="Story Owner" value="{!rally_obj.Story_Owner__c}"/>
                    <apex:column headerValue="Task Completion %" value="{!rally_obj.Task_Completion__c}"/>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
